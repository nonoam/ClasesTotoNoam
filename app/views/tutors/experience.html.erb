<div class="container py-5">
  <h1 class="page-title animate-fade-in">Nuestra Experiencia</h1>
  
  <div class="tutors-section">
    <% @tutors.each_with_index do |tutor, index| %>
      <div class="tutor-profile <%= 'reverse' if index.odd? %> animate-slide-up">
        <div class="tutor-image">
          <%= image_tag tutor.profile_image_url || "tutor-placeholder.jpg",
              alt: tutor.name, class: "profile-img" %>
        </div>
        
        <div class="tutor-info">
          <h2><%= tutor.name %></h2>
          <div class="tutor-meta">
            <span class="experience-badge">
              <%= tutor.years_experience %> años de experiencia
            </span>
          </div>
          
          <div class="tutor-bio">
            <p><%= tutor.bio %></p>
          </div>
          
          <div class="tutor-education">
            <h4>Formación Académica</h4>
            <p><%= tutor.education %></p>
          </div>
          
          <div class="tutor-experience">
            <h4>Experiencia Profesional</h4>
            <p><%= tutor.experience %></p>
          </div>
          
          <div class="tutor-subjects">
            <h4>Materias que imparte</h4>
            <div class="subject-tags">
              <% tutor.subjects.each do |subject| %>
                <span class="tag"><%= subject.name %></span>
              <% end %>
            </div>
          </div>
          
          <% if tutor.testimonials.any? %>
            <div class="tutor-testimonials">
              <h4>Testimonios de estudiantes</h4>
              <div class="testimonial-list">
                <% tutor.testimonials.recent.limit(2).each do |testimonial| %>
                  <div class="mini-testimonial">
                    <div class="stars-mini">
                      <% testimonial.rating.times do %>⭐<% end %>
                    </div>
                    <p>"<%= truncate(testimonial.content, length: 150) %>"</p>
                    <cite>- <%= testimonial.student_name %></cite>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  
  <section class="achievements">
    <h2 class="section-title">Nuestros Logros</h2>
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-number" data-counter="500">0</div>
        <div class="stat-label">Estudiantes Satisfechos</div>
      </div>
      <div class="stat-card">
        <div class="stat-number" data-counter="1200">0</div>
        <div class="stat-label">Horas de Clases</div>
      </div>
      <div class="stat-card">
        <div class="stat-number" data-counter="95">0</div>
        <div class="stat-label">% Tasa de Aprobación</div>
      </div>
      <div class="stat-card">
        <div class="stat-number" data-counter="4.8">0</div>
        <div class="stat-label">Calificación Promedio</div>
      </div>
    </div>
  </section>
</div>